<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link href="/css/output.css" rel="stylesheet" />
        <title>Messages</title>
    </head>
    <body>
        <nav class="bg-gray-100 b w-full border-b-2 border-black">
            <div
                class="max-w-screen flex items-center justify-between mx-auto p-6"
            >
                <h1 class="text-4xl font-semibold text-blue-600">Messages</h1>
                <div class="flex gap-6">
                    <a class="hover:underline" href="/messages/membership"
                        >Create new post</a
                    >
                    <a class="hover:underline" href="/messages/membership"
                        >Become a member</a
                    >
                </div>
            </div>
        </nav>

        <div class="bg-zinc-200 w-full h-screen">
            <p>Logged in as: <span><%= currentUser.first_name %></span></p>

            <form action="/logout" method="POST" style="display: inline">
                <button type="submit">Logout</button>
            </form>
            <h2>Your Messages:</h2>
            <ul>
                <% messages.forEach(function(message) { %>
                <li>
                    <h3><%= message.title %></h3>
                    <p><%= message.text %></p>
                    <% if (membershipStatus) { %>
                    <p>Author: <%= message.author_name %></p>
                    <p>
                        Date: <%= new Date(message.timestamp).toLocaleString()
                        %>
                    </p>

                    <% } %>
                </li>
                <% }); %>
            </ul>
            <a href="/messages/new">Make new message</a>
            <a href="/messages/membership">Become a member to see authors</a>
        </div>
    </body>
</html>
