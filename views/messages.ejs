<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Messages</title>
    </head>
    <body>
        <h1>Messages</h1>
        <div>
            <p>Logged in as: <span><%= currentUser.first_name %></span></p>

            <form action="/logout" method="POST" style="display: inline">
                <button type="submit">Logout</button>
            </form>
            <h2>Your Messages:</h2>
            <ul>
                <% messages.forEach(function(message) { %>
                <li>
                    <h3><%= message.title %></h3>
                    <p><%= message.text %></p>
                    <% if (membershipStatus) { %>
                    <br /><small>Author: <%= message.author_name %></small>
                    <% } %>
                </li>
                <% }); %>
            </ul>
            <a href="/messages/new">Make new message</a>
            <a href="/messages/membership">Become a member to see authors</a>
        </div>
    </body>
</html>
