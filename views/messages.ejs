<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link href="/css/output.css" rel="stylesheet" />
        <title>Messages</title>
    </head>
    <body>
        <%- include('./navbar.ejs') %>

        <section
            class="bg-zinc-200 min-h-[100vh] w-[100vw] pb-[5vh] pt-6 flex flex-col gap-2 items-center relative"
        >
            <% messages.forEach(function(message) { %>

            <div
                class="border border-gray-300 rounded-lg p-6 mb-4 bg-white shadow-md w-[90vw] md:w-[70vw]"
            >
                <h3 class="text-2xl font-semibold text-blue-600 mb-2">
                    <%= message.title %>
                </h3>
                <p class="mb-4"><%= message.text %></p>
                <% if (membershipStatus) { %>
                <p class="text-sm">
                    Posted by <%= message.author_name %> on <%= new
                    Date(message.timestamp).toLocaleString() %>
                </p>
                <% } %>
            </div>
            <% }); %>
        </section>
    </body>
</html>
